firewall_ports_service_clients:
# CAS API
  - 3218/tcp
# S3_object_{http,https}, ATMOS_object_{http,https}, Swift_object_{http,https}
  - 9020-9025/tcp
# HDFS
  - 9040/tcp
firewall_ports_management_clients:
# SSH
  - 22/tcp
# Portal HTTP
  - 80/tcp
# Portal HTTPS
  - 443/tcp
# Management API
  - 4443/tcp
